<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:id="@+id/llContentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLeftDrawer"
        android:layout_width="450px"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:padding="10px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300px">

            <LinearLayout
                android:id="@+id/llIp"
                android:layout_width="400px"
                android:layout_height="60px"
                android:layout_margin="20px"
                android:background="@drawable/bg_login_et"
                android:focusableInTouchMode="true">

                <ImageView
                    android:layout_width="56px"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_amount"/>

                <com.sjjd.wyl.baseandroid.view.MEditView

                    android:id="@+id/etServerIp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5px"
                    android:background="@drawable/bg_et_none"
                    android:gravity="center_vertical"
                    android:hint="请输入服务器socket ip"
                    android:inputType="number|textUri"
                    android:maxLines="1"
                    android:paddingLeft="10px"
                    android:singleLine="true"
                    android:text="192.168.2.188"
                    android:textCursorDrawable="@drawable/et_cursor"
                    android:textSize="25px"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPort"
                android:layout_width="400px"
                android:layout_height="60px"
                android:layout_below="@id/llIp"
                android:layout_margin="20px"
                android:background="@drawable/bg_login_et"
                android:focusableInTouchMode="true">

                <ImageView
                    android:layout_width="56px"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_amount"/>

                <com.sjjd.wyl.baseandroid.view.MEditView
                    android:id="@+id/etServerPort"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5px"
                    android:background="@drawable/bg_et_none"
                    android:gravity="center_vertical"
                    android:hint="请输入服务器socket端口号"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="10px"
                    android:singleLine="true"
                    android:text="8282"
                    android:textCursorDrawable="@drawable/et_cursor"
                    android:textSize="25px"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="200px"
                android:layout_height="50px"
                android:layout_below="@id/llPort"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:background="@drawable/bg_btn_connect"
                android:text="连接服务器"
                android:textColor="@color/white"
                android:textSize="25px"/>

            <RelativeLayout
                android:id="@+id/rlLoading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/halftrans"
                android:visibility="gone"
                >

                <com.sjjd.wyl.baseandroid.view.LoadingView
                    android:id="@+id/loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/btnGetArea"
                android:layout_width="200px"
                android:layout_height="50px"
                android:layout_below="@id/llPort"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:background="@drawable/bg_btn_connect"
                android:text="获取设置信息"
                android:textColor="@color/white"
                android:textSize="25px"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
